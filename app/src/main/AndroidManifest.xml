<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilemall">
    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:name=".MallApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_launcer_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidMall">
        <activity
            android:name=".ui.activity.LoginActivity"
            android:icon="@drawable/app_launcer_icon"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:icon="@drawable/app_launcer_icon"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.ItemDetailActivity"
            android:icon="@drawable/app_launcer_icon"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:icon="@drawable/app_launcer_icon"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.FirstActivity"
            android:icon="@drawable/app_launcer_icon"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>